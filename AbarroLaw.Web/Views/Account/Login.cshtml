@model AbarroLaw.Web.Models.ViewModels.LoginViewModel

@{
    ViewBag.ShowHeader = false;
    ViewBag.ShowFooter = false;
    ViewBag.ShowMessage = false;
}


<section class="container-fluid vh-100" style="background-color: #305160;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="~/images/orig_images/14-1.jpg"
                                 alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem; height: 75vh;" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">

                                    <div class="d-flex justify-content-center mb-3 pb-1">
                                        <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                        <img src="~/images/logo_footer.png" style="width: 35vh;" />
                                    </div>

                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into your account</h5>


                                    <form method="post">
                                        <div data-mdb-input-init class="form-outline mb-4">
                                            <input type="text" id="form2Example17" placeholder="Username" class="form-control form-control-lg" asp-for="Username"/>
                                        </div>

                                        <div data-mdb-input-init class="form-outline mb-4">
                                            <input type="password" id="form2Example27" placeholder="Password" class="form-control form-control-lg" asp-for="Password"/>
                                        </div>

                                        <div class="pt-1">
                                            <button data-mdb-button-init data-mdb-ripple-init class="btn btn-dark btn-lg btn-block" type="submit">
                                                Login
                                            </button>
                                        </div>

                                        <input type="hidden" asp-for="ReturnUrl"/>
                                    </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>