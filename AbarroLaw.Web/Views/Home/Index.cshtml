@{
    ViewData["Title"] = "Home Page";
}

@* CSS Codes ------------------------------------------------------------------ *@
<style>
    body
    {
        overflow-x: hidden;
    }

    .middle-page
    {
        margin-top: 15vh;
        background-color: white;
        margin-bottom: 23vh;
    }

    .areas-fonts
    {
        color: white;
        text-align: center;
        font-family: Poppins;
        
    }

    .carousel-imgs
    {
        height: 100vh;
        object-fit: cover;
        filter: brightness(45%);
    }

    .carousel-caption-left {
        position: absolute;
        left: 10%; /* Adjust as needed */
        top: 50%; /* Center vertically */
        transform: translateY(-50%);
        text-align: left;
        color: white; /* Text color */
    }

    .carousel-caption-left h1 {
        font-size: 3rem; /* Adjust font size */
        font-weight: bold;
        margin-bottom: 1rem;
        font-family: Poppins;
        font-weight: 200;
    }

    .carousel-caption-left p {
        font-size: 1.2rem; /* Adjust font size */
        margin-bottom: 0;
        font-family: Poppins;
        font-weight: 100;
    }

    .line-img
    {
        height: 2px;
        width: 12vw;
    }

</style>

@* Landing ------------------------------------------------------------------- *@
<div id="carouselExampleIndicators" class="carousel slide carousel-fade" style="height: 100vh;">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">

        <div class="carousel-item active">
            <img src="~/images/landing_1.png" class="d-block w-100 carousel-imgs" alt="...">
            @* captions *@
            <div class="carousel-caption-left">
                <div class="d-flex align-items-center">
                    <img src="~/images/line.png" class="line-img me-3"/>
                    <p>WE FIGHT FOR JUSTICE</p>
                </div>
                <h1>Defending Your Rights, <br> Protecting Your Future.</h1>
            </div>
        </div>

        <div class="carousel-item">
            <img src="~/images/landing_2.png" class="d-block w-100 carousel-imgs" alt="...">
            @* captions *@
            <div class="carousel-caption-left">
                <div class="d-flex align-items-center">
                    <img src="~/images/line.png" class="line-img me-3" />
                    <p>DEDICATED DEFENSE</p>
                </div>
                <h1>Legal excellence, <br> personal commitment.</h1>
            </div>
        </div>

        <div class="carousel-item">
            <img src="~/images/landing_3.png" class="d-block w-100 carousel-imgs" alt="...">
            @* captions *@
            <div class="carousel-caption-left">
                <div class="d-flex align-items-center">
                    <img src="~/images/line.png" class="line-img me-3" />
                    <p>LEGAL PARTNER</p>
                </div>
                <h1>Your Strong Defense, <br> Your Legal Sword </h1>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

@*Middle Page  --------------------------------------------------------------- *@
<div class="container middle-page d-flex flex-column align-items-center" style="font-family: Poppins">

    <p class="mb-5" style="font-weight: 300; font-size: 1.2em; color: dimgray; letter-spacing: 0.3em;">
        SOPHISTICATED EXPERTISE
    </p>

    <div class="container px-5 mx-5 mb-5" style="width: 80vw;">
        <p class="fs-2" style="font-weight: 500; letter-spacing: 0.1em; line-height: 2em; text-align: center;">
            Specializing in our core areas, we provide extensive resources and exceptional client service to satisfy the
            diverse requirements of clients from multiple sectors.
        </p>
    </div>

    <div class="container d-flex justify-content-center">
        <img src="~/images/phone_gold.png" style="height: 2.3vw;"/>
        <p class="fs-4 mx-2">CALL US NOW: +63 931 63 4056</p>
    </div>

</div>


@*Practice Areas  -------------------------------------------------------------- *@
<div class="pt-5 pb-3" style="background-color: #0A2632; height: 100vh;">
    <div class="container d-flex flex-column align-items-center areas-fonts pt-3" >

        <h1 style="font-weight: 300; letter-spacing: 0.3em;">EXPLORE OUR PRACTICE AREAS</h1>

        <p class="mt-2 mb-5" style="width: 55vw; letter-spacing: 0.03em;">
            Explore our practice areas that suit your needs. Our office is committed to providing exceptional legal services 
            to major corporations and businesses across various countries.
        </p>

        <img src="~/images/practice/all_practice.png" style="height: 22vw;"/>

        <div class="ms-auto mb-5" style="text-align: right;">
            <p class="mt-3 mb-0">Not sure what service you need?</p>
            <a asp-controller="PracticeArea" asp-action="PracticeAreaView" style="text-align: right;">See all services >></a>
        </div>
        
    </div>
</div>


